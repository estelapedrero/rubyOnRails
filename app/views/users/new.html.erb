<h1>new user</h1>

<% if @user.errors.any? %>
<ul>
	<% @user.errors.full_messages.each do |error_message| %>
	<li> <%= error_message %> </li>
	<% end %>
</ul>
<% end %>

<%= form_for [@user] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :email%>
	<%= f.text_field :email %>
	<%= f.submit "sendsendsend!" %>

	<% end %>