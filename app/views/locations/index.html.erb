<h1>Locations</h1>

<h2><% if flash[:error] %>
 <%= flash[:error] %>
<% end %>
</h2>

<ul>
	<% @locations.each do |location| %>
	<li> 
	<% if location.name.present? %>
		
		<!--<%= link_to location.name, location_visits_path(location) %>-->
		<div><%= location.name %></div>
		<div><%= location.city %> - <%= location.country %></div>
		<div><%= "lat: #{location.latitud} - long: #{location.longitud}" %> </div>
		<div><%= location.description %></div>

	<% else %>
		<%= link_to location.city, location_visits_path(location) %></li>	
		<% end %>
	</li>
	<% end %>


</ul>
